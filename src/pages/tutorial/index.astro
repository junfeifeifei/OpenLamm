---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import TutorialContent from './tutorial.mdx';

const metadata = {
  title: 'Tutorial',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header {...headerData} isSticky showToggleTheme />
  </Fragment>

  <div class="flex flex-row min-h-screen">
    <!-- Sidebar -->
    <div class="w-1/5 dark:bg-gray-800 p-4 border-r border-gray-300 dark:border-gray-600">
      <h2 class="block mb-4 text-gray-700 dark:text-gray-300">Tutorial</h2>
      <ul class="space-y-2">
        <li class="relative">
          <input type="checkbox" id="datasets-toggle" class="hidden peer">
          <label for="datasets-toggle" class="block py-2 px-4 cursor-pointer hover:bg-gray-200 dark:hover:bg-gray-700 flex items-center justify-between">
            Datasets
            <svg class="w-4 h-4 transition-transform transform peer-checked:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </label>
          <ul class="ml-4 hidden peer-checked:block border-l border-gray-300 dark:border-gray-600">
            <li><a href="#instruction-tuning" class="block py-2 px-4 hover:bg-gray-200 dark:hover:bg-gray-700">Instruction Tuning</a></li>
            <li><a href="#benchmarking" class="block py-2 px-4 hover:bg-gray-200 dark:hover:bg-gray-700">Benchmarking</a></li>
          </ul>
        </li>
        <li><a href="#installation" class="block py-2 px-4 hover:bg-gray-200 dark:hover:bg-gray-700">Installation</a></li>
        <li><a href="#training" class="block py-2 px-4 bg-blue-100 text-blue-600">Training</a></li>
        <li><a href="#benchmark" class="block py-2 px-4 hover:bg-gray-200 dark:hover:bg-gray-700">Benchmark</a></li>
        <li><a href="#citation" class="block py-2 px-4 hover:bg-gray-200 dark:hover:bg-gray-700">Citation</a></li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="w-3/4 p-8">
      <TutorialContent />
    </div>
  </div>
</Layout>
